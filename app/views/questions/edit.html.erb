<h2>Question: <%= @question.title %></h2>

<%= form_for @question do |f| %>
  <%= f.label :edit_title %>
  <%= f.text_field :title %>
  <%= f.label :edit_description %>
  <%= f.text_area :description %>
  <%= f.submit "Submit" %>
<% end %>

<%= link_to "Delete", @question, method: :delete %>
