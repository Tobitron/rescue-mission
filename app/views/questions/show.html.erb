<h1><%= @question.title %></h1>
<p><%= @question.description %></p>

<div class="large-12">
  <h1>New Answer</h1>
  <%= form_for [@question, @answer] do |f| %>
    <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit "Submit" %>
<%- end -%>


<div>
  <h1> Answers: </h1>
    <% @answer_show.each do |answer| %>
      <div>
      <%= answer.description %>
    </div>
  <% end %>
  </div>








